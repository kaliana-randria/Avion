<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                      https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
  version="6.0">

    <display-name>Afficher</display-name>

    <servlet>
      <servlet-name>volAccueil</servlet-name>
      <servlet-class>controllers.VolServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>volAccueil</servlet-name>
      <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>volAccueil</servlet-name>
      <url-pattern>/accueil</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>rechercheVols</servlet-name>
      <servlet-class>controllers.RechercheVolServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>rechercheVols</servlet-name>
      <url-pattern>/recherche</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>Detail</servlet-name>
      <servlet-class>controllers.DetailVolServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>Detail</servlet-name>
      <url-pattern>/detailVol</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>reservationVol</servlet-name>
      <servlet-class>controllers.ReservationVolServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>reservationVol</servlet-name>
      <url-pattern>/reservation</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>reserve</servlet-name>
      <servlet-class>controllers.ReserverServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>reserve</servlet-name>
      <url-pattern>/reserver</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>AvionAdmin</servlet-name>
      <servlet-class>controllers.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>AvionAdmin</servlet-name>
      <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>AdminVol</servlet-name>
      <servlet-class>controllers.VolAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>AdminVol</servlet-name>
      <url-pattern>/volAdmin</url-pattern>
    </servlet-mapping>
    
    <servlet>
      <servlet-name>AjoutVol</servlet-name>
      <servlet-class>controllers.FormAjoutVolServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>AjoutVol</servlet-name>
      <url-pattern>/ajoutVol</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>paiementReservation</servlet-name>
      <servlet-class>controllers.PaiementReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>paiementReservation</servlet-name>
      <url-pattern>/paiement</url-pattern>
    </servlet-mapping>

</web-app>

